---
import "../styles/global.css";
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/NavBar.astro';

interface Props {
  name?: string;
  year?: string;
  socialLinks?: {
    linkedin?: string;
    instagram?: string;
    dribbble?: string;
  };
}

const { 
  name = "Christian Puga",
  year = "2025",
  socialLinks = {
    linkedin: "#",
    instagram: "#",
    dribbble: "#"
  }
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Christian Puga - UI/UX Designer</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <ViewTransitions />
  </head>
  <body class="scrollbar-gutter-stable bg-[#1A1B1F] text-white flex flex-col min-h-screen">
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>

    <footer class="w-full mt-20 border-t border-gray-700 pt-20 text-white py-16">
      <div class="max-w-[880px] mx-auto px-">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center space-y-4 md:space-y-0">
          <div class="space-y-4">
            <p class="text-lg font-normal">
              MX - {year} {name}.
            </p>
            <nav class="flex space-x-6">
              <a 
                href={socialLinks.linkedin}
                class="text-gray-300 hover:text-white transition-colors"
              >
                Linkedin
              </a>
              <a 
                href={socialLinks.instagram}
                class="text-gray-300 hover:text-white transition-colors"
              >
                Instagram
              </a>
              <a 
                href={socialLinks.dribbble}
                class="text-gray-300 hover:text-white transition-colors"
              >
                Dribbble
              </a>
            </nav>
          </div>
    
          <div>
            <p class="text-gray-300">Portfolio in constant progress.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

<style>
  
</style>

</html>

